        <!-- @Public -->
        <!-- @ReadOnly  -->
        <field id="itemSelected" type="integer" alias="menuButtonGroup.itemSelected" />
    </interface>
    
    <script type="text/brightscript" uri="HMenuView.brs" />

    <children>
    	<LabelList
    		id = "menuButtonGroup"
